@{
   Layout=null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>TataSteel UISL SHA | Log In</title>
    <!-- Tell the browser to be responsive to screen width -->
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!-- Font Awesome -->
    <!-- Ionicons -->
    <link href="~/plugins/fontawesome-free/css/all.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://code.ionicframework.com/ionicons/2.0.1/css/ionicons.min.css">
    <!-- icheck bootstrap -->
    <link rel="stylesheet" href="~/plugins/icheck-bootstrap/icheck-bootstrap.min.css">
    <!-- Theme style -->
    <link rel="stylesheet" href="~/dist/css/adminlte.min.css">
    <link href="~/dist/css/custom.css" rel="stylesheet" />
    <!-- Google Font: Source Sans Pro -->
    <link href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,400i,700" rel="stylesheet">

</head>
<body class="hold-transition login-page" style="height:75vh!important;">
    <img src="~/dist/img/login_header.png" style="max-width:100%;height:auto;" /><br>

    <div class="login-box">
        <!-- /.login-logo -->
        <div class="card">

            <div class="card-body login-card-body" style="z-index:9999!important;">
                <div class="input-group mb-3">
                    <input id="pno" name="pno" type="number" class="form-control" placeholder="Personal Number" required>
                    <div class="input-group-append">
                        <div class="input-group-text">
                            <span class="fas fa-user"></span>
                        </div>
                    </div>
                </div>
                <div class="input-group mb-3">
                    <input id="password" name="password" type="password" class="form-control" placeholder="Password" required>
                    <div class="input-group-append">
                        <div class="input-group-text">
                            <span class="fas fa-lock"></span>
                        </div>
                    </div>
                </div>
                <div class="input-group mb-3">
                    <select id="app" name="app" class="form-control" required>
                        <option value="SHA">SHA</option>
                        <option value="Design">Design</option>
                        <option value="QA">QA</option>
                    </select>
                    <div class="input-group-append">
                        <div class="input-group-text">
                            <span class="fas fa-folder"></span>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-8">
                        <P align="right"><input id="rem" name="rem" type="checkbox" checked> Remember Me?</P>

                    </div>
                    <!-- /.col -->
                    <div class="col-12">
                        <button type="submit" id="btn_login" class="btn btn-primary btn-block" onClick="Validate()" data-request-url="@Url.Action("Validate", "Account")">Sign In</button>

                    </div>
                    @*<div class="col-12">
                        <a class="btn btn-outline-primary btn-block mt-2" href="@Url.Action("QaLogin", "Account")">QA Sign In</a>

                    </div>*@
                    <div class="col-12">
                        <hr>
                        <button type="submit" id="btn_login2" class="btn btn-default btn-block" onClick="Validate2(); return false;" data-request-url="@Url.Action("Forgot", "Account")">Forgot Password</button>
                    </div>
                    <!-- /.col -->
                </div>

            </div>
            <!-- /.login-card-body -->
        </div>
    </div>
    <div class="modal" id="modal-loader" style="z-index:9999!important;">
        <div class="modal-dialog modal-sm modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-body">
                    <img class="mx-auto d-block" src="~/dist/img/loader.gif" />
                    <p class="text-center">Please wait</p>
                </div>
            </div>
            <!-- /.modal-content -->
        </div>
        <!-- /.modal-dialog -->
    </div>
    <!-- /.login-box -->
    <!--<center>
        <p style="z-index:9999"> Designed by Anmoul Infomatics Pvt. Ltd.</p>
    </center>-->
    <!-- jQuery -->
    <script src="~/plugins/jquery/jquery.min.js"></script>
    <!-- Bootstrap 4 -->
    <script src="~/plugins/bootstrap/js/bootstrap.bundle.min.js"></script>
    <!-- AdminLTE App -->
    <script src="~/dist/js/adminlte.min.js"></script>
    <!-- login -->
    <script src="~/dist/js/sweetalert.min.js"></script>

    <script src="~/dist/js/login.js"></script>
    <div class="footer">

    </div>
</body>
</html>
