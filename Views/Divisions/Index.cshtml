@model IEnumerable<DETP.model.Division>
@addTagHelper "*, Microsoft.AspNetCore.Mvc.TagHelpers"

@{
    ViewData["Title"] = "Division";
}



<div class="card m-3">

    <div class="card-header">
        <div class="text-right">
            <a asp-action="Create" class="btn btn-primary">Create New</a>
        </div>
    </div>
    <div class="card-body">
        <table class="table" id="example1">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.name)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.DivisionHead.Name)
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.DivisionHead.Name)
                        </td>
                        <td>
                            <a class="btn btn-secondary" asp-action="Edit" asp-route-id="@item.id">Edit</a>
                            <a class="btn btn-info" asp-action="Details" asp-route-id="@item.id">Details</a>
                            <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.id">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>