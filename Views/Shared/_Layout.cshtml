@using Microsoft.AspNetCore.Http;
<!DOCTYPE html>
<html>

<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>TataSteel UISL QA | @ViewBag.Title</title>
    <!-- Tell the browser to be responsive to screen width -->
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!-- Font Awesome -->
    <link rel="stylesheet" href="~/plugins/fontawesome-free/css/all.min.css">
    <!-- Ionicons -->
    <link rel="stylesheet" href="https://code.ionicframework.com/ionicons/2.0.1/css/ionicons.min.css">
    
    <script src="~/dist/main.js"></script>
    <script>
        window.baseurl = "@Url.Action("","")"
        console.log("@Url.Action()", "action")
    </script>

    <base href="~/" />

    <!-- iCheck -->
    <link rel="stylesheet" href="~/plugins/icheck-bootstrap/icheck-bootstrap.min.css">
    <!-- JQVMap -->
    <link rel="stylesheet" href="~/plugins/jqvmap/jqvmap.min.css">
    <!-- Theme style -->
    <link rel="stylesheet" href="~/dist/css/adminlte.min.css">

    <!-- overlayScrollbars -->
    <link rel="stylesheet" href="~/plugins/overlayScrollbars/css/OverlayScrollbars.min.css">
    <!-- Daterange picker -->
    <link rel="stylesheet" href="~/plugins/daterangepicker/daterangepicker.css">
    <!-- summernote -->
    <link rel="stylesheet" href="~/plugins/summernote/summernote-bs4.css">
    <!-- Google Font: Source Sans Pro -->
    <link href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,400i,700" rel="stylesheet">
	<script src="~/plugins/jquery-ui/jquery-ui.min.js"></script>
    <link href="~/plugins/jquery-ui/jquery-ui.min.css" rel="stylesheet" />
    <link href="~/plugins/jquery-ui/jquery-ui.structure.min.css" rel="stylesheet" />
    <link href="~/plugins/jquery-ui/jquery-ui.theme.min.css" rel="stylesheet" />
    <base href="~/" />
    <!-- Resolve conflict in jQuery UI tooltip with Bootstrap tooltip -->
    <script>
        $.widget.bridge('uibutton', $.ui.button)
    </script>
    <!-- ChartJS -->
    <script src="~/plugins/chart.js/Chart.min.js"></script>
    <!-- Sparkline -->
    <script src="~/plugins/sparklines/sparkline.js"></script>
    <!-- JQVMap -->
    <script src="~/plugins/jqvmap/jquery.vmap.min.js"></script>
    <script src="~/plugins/jqvmap/maps/jquery.vmap.usa.js"></script>
    <!-- jQuery Knob Chart -->
    <script src="~/plugins/jquery-knob/jquery.knob.min.js"></script>

    <script src="~/plugins/daterangepicker/daterangepicker.js"></script>
    <!-- Summernote -->
    <script src="~/plugins/summernote/summernote-bs4.min.js"></script>
    <!-- overlayScrollbars -->
    <script src="~/plugins/overlayScrollbars/js/jquery.overlayScrollbars.min.js"></script>
    <!-- AdminLTE App -->
    <script src="~/dist/js/adminlte.js"></script>
    <style>
        pre {
            white-space: pre-wrap;
        }

        label.error {
            color: #e74c3c!important;
            font-size: small!important;
            font-weight: normal!important;
        }
        input.error {
            border-color: #e74c3c!important;
        }
        select.error {
            border-color: #e74c3c!important;
        }
    </style>

    @RenderSection("Head", false)

</head>

<body class="hold-transition sidebar-mini layout-fixed">
    <div class="wrapper">

        <!-- Navbar -->
        <nav class="main-header navbar navbar-expand navbar-white navbar-light">
            <!-- Left navbar links -->
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a class="nav-link" data-widget="pushmenu" href="#" role="button"><i class="fas fa-bars"></i></a>
                </li>
            </ul> <img src="~/dist/img/logo_top.png" style="max-width:55%;height:auto;" />

            <!-- Right navbar links -->
            <ul class="navbar-nav ml-auto">
                <!-- Notifications Dropdown Menu -->
                <li class="nav-item dropdown">
                    <a class="nav-link" data-toggle="dropdown" href="#">
                        <span>@Context.Session.GetString("pno")</span> <i class="ml-2 far fa-user"></i>
                    </a>
                    <div class="dropdown-menu dropdown-menu-lg dropdown-menu-right">
                        <a href="#" class="dropdown-item" data-toggle="modal" data-target="#modal-changepassword">
                            <i class="fas fa-key"></i>
                            <span class="float-right">Change Password</span>
                        </a>
                        <div class="dropdown-divider"></div>
                        <a href=@Url.Action("LogOut", "Account") class="dropdown-item">
                            <i class="fas fa-sign-in-alt"></i>
                            <span class="float-right">Log Out</span>
                        </a>
                    </div>
                </li>
            </ul>
        </nav>
        <!-- /.navbar -->
        <!-- Main Sidebar Container -->
        <partial name="_MainMenu" />
        @*@Html.Partial("_MainMenu")*@

        <!-- Content Wrapper. Contains page content -->
        <div class="content-wrapper">
            <!-- Content Header (Page header) -->
            <div class="content-header">
                <div class="container-fluid">
                    <div class="row mb-2">
                        <div class="col-sm-6">
                            <h1 class="m-0 text-dark">
                                @ViewBag.Title
                            </h1>

                        </div><!-- /.col -->
                        <div class="col-sm-6">
                            <ol class="breadcrumb float-sm-right">
                                <li class="breadcrumb-item"><a href="@Url.Action("index", "Home")">Home</a></li>
                                <li class="breadcrumb-item active">@ViewBag.Title</li>
                            </ol>
                        </div><!-- /.col -->
                    </div><!-- /.row -->
                </div><!-- /.container-fluid -->
            </div>

            @RenderBody()
            
        </div>
        <!-- /.content-wrapper -->
        <footer class="main-footer footer">
            <p style="float:left">TataSteel UISL QA Application</p>
            <p style="float:right"> Designed by Anmoul Infomatics Pvt. Ltd.</p>
        </footer>

        <!-- Control Sidebar -->
        <aside class="control-sidebar control-sidebar-dark">
            <!-- Control sidebar content goes here -->
        </aside>
        <!-- /.control-sidebar -->
    </div>
    @if (ViewBag.cp != null)
    {
        if (ViewBag.cp.Equals("yes"))
        {
            <div class="modal fade" id="modal-ochangepassword">
                <div class="modal-dialog modal-dialog-centered">
                    <div class="modal-content">
                        <div class="modal-body">

                            <p>Request you to please change your password!</p>

                            <div class="col-6"><label>Old Password</label></div>
                            <div class="col-12"><input type="password" class="form-control" name="old_pwd" id="old_pwd" /></div>
                            <div class="col-6"><label>New Password</label></div>
                            <div class="col-12"><input type="password" class="form-control" name="new_pwd" id="new_pwd" /></div>
                            <br>
                            <center>
                                <button id="submit_request2" type="submit" class="btn btn-sm btn-primary" name="change_btn"
                                    data-request-url="@Url.Action("ChangePassword", "Home")" OnClick="changepwd()">Change
                                    Password</button>
                            </center>

                        </div>
                    </div>
                    <!-- /.modal-content -->
                </div>
                <!-- /.modal-dialog -->
            </div>
        }
    }

    <div class="modal fade" id="modal-changepassword">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-body">
                    <div class="col-6"><label>Old Password</label></div>
                    <div class="col-12"><input type="password" class="form-control" name="old_pwd" id="old_pwd" /></div>
                    <div class="col-6"><label>New Password</label></div>
                    <div class="col-12"><input type="password" class="form-control" name="new_pwd" id="new_pwd" /></div>
                    <br>
                    <center>
                        <button id="submit_request2" type="submit" class="btn btn-sm btn-primary" name="change_btn"
                            data-request-url="@Url.Action("ChangePassword", "Home")" OnClick="changepwd()">Change
                            Password</button>
                    </center>

                </div>
            </div>
            <!-- /.modal-content -->
        </div>
        <!-- /.modal-dialog -->
    </div>

    <div class="modal fade" id="modal-success">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-body">
                    <p class="text-center"><i class="fas fa-3x fa-check-circle"></i></p>
                    <p class="text-center">Password Changed Successfully!</p>
                </div>
            </div>
            <!-- /.modal-content -->
        </div>
        <!-- /.modal-dialog -->
    </div>
    <div class="modal fade" id="modal-danger">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-body">


                    <p class="text-center"><i class="fas fa-3x fa-ban"></i></p>
                    <p class="text-center">Failed to change!</p>
                </div>
            </div>
            <!-- /.modal-content -->
        </div>
        <!-- /.modal-dialog -->
    </div>
    <div class="modal" id="modal-loader">
        <div class="modal-dialog modal-sm modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-body">
                    <img class="mx-auto d-block" src="~/dist/img/loader.gif" />
                    <p class="text-center">Please wait</p>
                </div>
            </div>
            <!-- /.modal-content -->
        </div>
        <!-- /.modal-dialog -->
    </div>
    <!-- ./wrapper -->

    <script src="~/plugins/jszip/jszip.min.js"></script>
    <script src="~/plugins/pdfmake/pdfmake.min.js"></script>
    <script src="~/plugins/pdfmake/vfs_fonts.js"></script>
    <script src="~/plugins/daterangepicker/daterangepicker.js"></script>
    <script src="~/plugins/selectpage/selectpage.js"></script>
   
    <script>

        $(document).ready(function () {

            $('input').on('keyup', function () {

                if (this.value.includes("'")) {
                    this.value = this.value.replaceAll("'", "");
                }
                if (this.value.includes("`")) {
                    this.value = this.value.replaceAll("`", "");
                }
            })

            $('textarea').on('keyup', function () {

                if (this.value.includes("'")) {
                    this.value = this.value.replaceAll("'", "");
                }
                if (this.value.includes("`")) {
                    this.value = this.value.replaceAll("`", "");
                }
            })

            $('#example1').DataTable();
            $('#example2').DataTable();
            $('#example3').DataTable({
                dom: 'Bfrtip',
                buttons: [
                    'excelHtml5',
                    //      'csvHtml5',
                ]
            });
            $('#servar-paging').DataTable({
                processing: true,
                serverSide: true,
                ajax: {
                    url: "@Url.Action("Observations")", type: "post"
                },
                columns: [

        @{
            var columns = ViewBag.column;
        }

        @Html.Raw(columns)
                ],
                order: [1, 'asc'],
            });

            var elements = document.querySelectorAll('div > p > span');
            elements.forEach(function (el) {
                if (el.innerHTML.trim() == "") {
                    el.parentElement.parentElement.classList.add("d-none");
                }
            });

            var elements = document.querySelectorAll('div > pre');

            elements.forEach(function (el) {
                if (el.innerHTML.trim() == "") {
                    el.parentElement.classList.add("d-none");
                }
            });

        });

    </script>
    @if (ViewBag.cp != null)
    {
        if (ViewBag.cp.Equals("yes"))
        {
            <script>

                $(document).ready(function () {
                    $('#modal-ochangepassword').modal({ backdrop: 'static', keyboard: false });

                    $('#modal-ochangepassword').modal('show');
                });
            </script>
        }
    }

    @RenderSection("Scripts", false);
</body>

</html>
